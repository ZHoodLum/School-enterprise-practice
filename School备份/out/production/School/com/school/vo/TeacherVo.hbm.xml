<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.school.vo.TeacherVo" table="teacher" schema="school">
        <id name="tid">
            <column name="tid" sql-type="int(11)"/>
        </id>
        <property name="tname">
            <column name="tname" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="tpwd">
            <column name="tpwd" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="tCollege">
            <column name="t_college" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="tGender">
            <column name="t_gender" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="tJob">
            <column name="t_job" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="tphone">
            <column name="tphone" sql-type="varchar(15)"/>
        </property>
    </class>
</hibernate-mapping>