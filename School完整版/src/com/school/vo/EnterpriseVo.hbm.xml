<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.school.vo.EnterpriseVo" table="enterprise" schema="school">
        <id name="eid">
            <column name="eid" sql-type="int(11)"/>
        </id>
        <property name="ename">
            <column name="ename" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="epwd">
            <column name="epwd" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="eintroduce">
            <column name="eintroduce" sql-type="varchar(500)" length="500"/>
        </property>
        <property name="eadd">
            <column name="eadd" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="ephone">
            <column name="ephone" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="emanager">
            <column name="emanager" sql-type="varchar(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>